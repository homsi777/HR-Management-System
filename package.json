{
  "name": "hr-management-system",
  "version": "1.3.0",
  "description": "A Human Resources Management System built with Electron and React.",
  "author": "Alamia for Accounting and Comprehensive Warehouses",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "electron-dev": "concurrently \"npm run dev\" \"npm run server\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "package": "npm run build && cross-env ELECTRON_BUILDER_CACHE=./.electron-builder-cache electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "android:build": "npm run build",
    "android:sync": "capacitor add android && capacitor sync android",
    "android:open": "capacitor open android",
    "server": "node cloud_server.js"
  },
  "dependencies": {
    "@capacitor-community/sqlite": "^6.0.0",
    "@capacitor/android": "^6.1.0",
    "@capacitor/core": "^6.1.0",
    "@google/genai": "^0.15.0",
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "html2canvas": "^1.4.1",
    "iconv-lite": "^0.6.3",
    "jeep-sqlite": "^2.7.0",
    "jspdf": "^2.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-webcam": "^7.2.0",
    "recharts": "^2.12.7",
    "serialport": "^12.0.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zklib-js-zkteko": "^1.3.4"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.alamia.hr",
    "productName": "Alamia HR Management",
    "files": [
      "dist/**/*",
      "img/**/*",
      "main.js",
      "preload.js",
      "database.js",
      "activationCodes.js",
      "cloud_server.js",
      "services/**/*",
      "database_logic/**/*",
      "main_services/**/*",
      "ipc_handlers/**/*",
      "scripts/**/*"
    ],
    "extraFiles": [
      "zk_pro.exe",
      "FingerprintTool.exe"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}